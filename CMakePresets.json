{
    "version": 8,
    "configurePresets": [
        {
            "name": "gcc11",
            "displayName": "GCC 11.4.0 x86_64-linux-gnu",
            "description": "Using compilers: C = /usr/bin/gcc, CXX = /usr/bin/g++",
            "binaryDir": "${sourceDir}/out/build/",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install",
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "MSVC19",
            "displayName": "Visual Studio Professional 2022 Release - x86",
            "description": "Using compilers for Visual Studio 17 2022 (x86 architecture)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}/install",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "MSVC19-debug",
            "displayName": "Visual Studio Professional 2022 Release - x86 - Debug",
            "configurePreset": "MSVC19",
            "configuration": "Debug"
        }
    ]
}